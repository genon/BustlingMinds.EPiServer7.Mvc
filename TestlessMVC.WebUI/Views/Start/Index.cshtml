@model TestlessMVC.Common.Common.ViewModels.StartViewPageModel
@using EPiServer.Web.Mvc.Html

@{
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<div class="page-header">
    <h1>@Html.PropertyFor(x => x.Heading)</h1>    
</div>
<div class="row-fluid">
    @Html.PropertyFor(x => x.News)
    <div class="span6 round">
        <div class="row-fluid">
            <div class="jumbotron">
                <h2>@Html.PropertyFor(x => x.Headline)</h2>                
                @Html.PropertyFor(x => x.Body, new { @class = "lead"})
            </div>
        </div>

        <div class="row-fluid">
            <div class="span4">
                @Html.PropertyFor(x => x.ContentAreaLeft, new EPiServer.Web.Mvc.EditHint { ContentDataPropertyName = "ContentAreaLeft" } )
            </div>
            <div class="span4">
                @Html.PropertyFor(x => x.ContentAreaRight, new EPiServer.Web.Mvc.EditHint { ContentDataPropertyName = "ContentAreaRigth" } )
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function() {
        $("#accordion").accordion({
            collapsible: true
        });
    });
</script>

